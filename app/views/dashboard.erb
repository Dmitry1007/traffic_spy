<body>
<h1 id="greeting">
  Welcome to TrafficSpy!
</h1>

<h3>Url breakdown:</h3>
<ol>
  <% @dataset.urls_sorted.each do |url, count| %>
    <li id="url_link"><a href="<%= @dataset.path(url) %>"><%= url %></a> : <%= count %> request(s)</li>
  <%end %>
</ol>

<h3>Web browser breakdown:</h3>
<ul>
  <% @dataset.breakdown_of_browser.each do |browser, count| %>
    <li><%= browser %> : <%= count %> time(s)</li>
  <% end %>
</ul>

<h3>Operating system breakdown:</h3>
<ul>
  <% @dataset.breakdown_of_operating_system.each do |platform, count| %>
    <li><%= platform %> : <%= count %> time(s)</li>
  <% end %>
</ul>

<h3>Resolution breakdown:</h3>
<ul>
  <% @dataset.breakdown_of_resolution.each do |resolution, count| %>
    <li><%= resolution %> : <%= count %> time(s)</li>
  <% end %>
</ul>

<h3>Average response times:</h3>
<ul>
  <% @dataset.breakdown_of_avg_url_response_times.each do |url, time| %>
    <li><%= url %> had an average response time of <%= time.to_i %> seconds</li>
  <% end %>
</ul>

</body>
